name: Update README.md

on:
  push:
    branches:
      - main
  pull_request:
    types: [opened, reopened, synchronize]

permissions:
  contents: write

jobs:
  update-readme:
    permissions:
      contents: write
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4

    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: 3.x

    - name: Install dependencies
      run: pip install xmltodict

    - name: Extract data from XML and update README
      run: |
        python .github/scripts/update_readme.py
          
    - name: Create Pull Request
      uses: peter-evans/create-pull-request@v7
      with:
            commit-message: update README.md
            committer: github-actions[bot] <41898282+github-actions[bot]@users.noreply.github.com>
            author: ${{ github.actor }} <${{ github.actor_id }}+${{ github.actor }}@users.noreply.github.com>
            signoff: false
            branch: update-README
            delete-branch: true
            title: Update README.md with XML data
            body: |
              Update README.md to reflect upcoming release changes
              - Updated with *today's* draft release
              - Auto-generated by [create-pull-request][1]

              [1]: https://github.com/peter-evans/create-pull-request

            labels: |
              automated pr
            assignees: urbanswelt
            reviewers: urbanswelt
            draft: false
            base: main